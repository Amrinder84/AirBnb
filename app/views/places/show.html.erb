<h1><%= @place.title %></h1>

<div class="main_photo">
  <%= filepicker_image_tag @place.filepicker_url, w: 100, h: 100, fit: 'small' %>
</div>

<div id="description">
  <p>Descripton: <br><%= @place.description %></p>
</div>

<div class="show_details show">
  <ul id="show_details">
    <li>Accommodates: <%= @place.max_occupancy %></li>
    <li>Room Type: <%= @place.room_type %></li>
    <li>Bedrooms: <%= @place.bedrooms %></li>
  </ul>
</div>

<div class="show_address show">
  <ul id="address">
    <li>Address: <br><%= @place.address.line1 %><br>
    <% if @place.address.line2 %>
      <%= @place.address.line2 %></li>
    <% end %>
    <li>City: <%= @place.address.city %></li>  
    <li>State: <%= @place.address.state %></li>
    <li>Zip Code: <%= @place.address.zip %></li>
  </ul>
</div>

<%= link_to "Edit Listing", edit_place_url, class: "btn btn-primary show_link_button" %>
<%= button_to "Delete Listing", place_url, method: :delete, class:  "btn btn-warning"%>
