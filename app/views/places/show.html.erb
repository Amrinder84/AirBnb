<h1><%= @place.title %></h1>

<% if current_user.id == @place.owner_id %>
  <div class="owner_options">
    <%= link_to "View Rental Requests",  
        place_place_rental_requests_url(@place), 
        class: "btn show_link_button" %>
    <%= link_to "Edit Listing", 
        edit_place_url, 
        class: "btn btn-primary show_link_button" %>
    <%= button_to "Delete Listing", 
        place_url, method: :delete, 
        class:  "btn btn-warning"%>
  </div>
<% end %>

<div class="main_photo">
  <%= filepicker_image_tag @place.filepicker_url, w:400 %>
</div>

<div id="description float_left">
  <p>Descripton: <br><%= @place.description %></p>
</div>

<div class="show_details show float_left">
  <ul id="show_details">
    <li>Accommodates: <%= @place.max_occupancy %></li>
    <li>Room Type: <%= @place.room_type %></li>
    <li>Bedrooms: <%= @place.bedrooms %></li>
  </ul>
</div>

<div class="show_address show float_left">
  <ul id="address">
    <li>Address: <br><%= @place.address.line1 %><br>
    <% if @place.address.line2 %>
      <%= @place.address.line2 %></li>
    <% end %>
    <li>City: <%= @place.address.city %></li>  
    <li>State: <%= @place.address.state %></li>
    <li>Zip Code: <%= @place.address.zip %></li>
  </ul>
</div>
  
<div class="form_on_page">
  <form action="<%= place_place_rental_requests_url(@place) %>" method="post" >
    <label for="request_begin">Begin Date</label>
    <input type="date" name="request[begin_date]" id="request_begin">

    <label for="request_end">End Date</label>
    <input type="date" name="request[end_date]" id="request_end">

    <input type="hidden" name="request[place_id]" value="<%= @place.id %>">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <input type="submit" value="Rent Me!" class="btn submit_button">
  </form>
</div>
