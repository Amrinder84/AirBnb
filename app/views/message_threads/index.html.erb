<script type="text/javascript" src="/threadIndex.js"></script>

<h2>Threads</h2>

<div class="all_threads">
  <% @threads.each do |thread| %>
    <div class="single_thread" data-id="<%= thread.id %>" 
          <% if thread.messages.any? {|msg| msg.read.nil?} %>
            style="background-color:#F39C12;"
          <% else %>
            style="background-color:#BDC3C7;"
          <% end %>>
      <h5>With: <%= thread.owner_id == current_user.id ? thread.user2.user_name : thread.user1.user_name %></h5>
      <h5>Title: <%= thread.messages.first.title %></h5>   
    </div>
  <% end %> 
</div>


